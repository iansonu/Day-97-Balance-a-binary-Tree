class Solution {
    public void inorder(ArrayList<Integer> list, TreeNode root){
        if(root == null){
            return;
        }

        inorder(list, root.left);
        list.add(root.val);
        inorder(list, root.right);
    }
    public TreeNode balanceBST(TreeNode root) {
        ArrayList<Integer> list = new ArrayList<>();

        inorder(list, root);
        
        return BSTMaker(list, 0, list.size()-1);
    }

    public TreeNode BSTMaker(ArrayList<Integer> list, int start,  int end){
        if(start > end){
            return null;
        }

        int mid = (start + end)/2;

        TreeNode root = new TreeNode(list.get(mid));

        root.left = BSTMaker(list, start, mid-1);
        root.right = BSTMaker(list, mid+1, end);

        return root;
    }
}
